# IPL Fantasy Pro - Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# SERVER CONFIG
# ===================
NODE_ENV=production
PORT=3001
APP_VERSION=1.0.0

# ===================
# DATABASE
# ===================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ipl_fantasy
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ===================
# JWT AUTH
# ===================
JWT_SECRET=generate_a_secure_random_string_here_at_least_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=another_secure_random_string_for_refresh_tokens

# ===================
# CORS
# ===================
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ===================
# CRICKET API (Optional)
# ===================
CRIC_API_URL=https://api.cricapi.com/v1
CRIC_API_KEY=your_cricapi_key_here

# ===================
# EXTERNAL SERVICES
# ===================
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# REDIS_URL=redis://localhost:6379
# AWS_S3_BUCKET=your-bucket-name

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
